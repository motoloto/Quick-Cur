{
    "name": "QuickCur 即時金額換匯幫手",
    "description": "將網頁上所選取的金額即時換匯成你要的幣別，簡單選取按右鍵便可顯示你要的金額．",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background-wrapper.js"
    },
    "options_page": "options.html",
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "webRequest"
        
    ],
    "externally_connectable": {
        "matches": ["https://tw.rter.info/capi.php"]
      },
      "host_permissions": [
        "https://tw.rter.info/"
      ],
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/16x16.png",
            "32": "/images/32x32.png",
            "48": "/images/48x48.png",
            "128": "/images/128x128.png"
          }
      },
      "icons": {
        "16": "/images/16x16.png",
        "32": "/images/32x32.png",
        "48": "/images/48x48.png",
        "128": "/images/128x128.png"
      }
}